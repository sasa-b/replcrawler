{
    "name": "sasa-b/replcrawler",
    "description": "Web Crawler with REPL shell",
    "type": "project",
    "license": "artistic-2.0",
    "autoload": {
        "psr-4": {
            "SasaB\\REPLCrawler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SasaB\\REPLCrawler\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Sasa Blagojevic",
            "email": "sasa.blagojevic@mail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "psy/psysh": "^0.11.2",
        "symfony/console": "^6.0",
        "fabpot/goutte": "^4.0",
        "ext-pcntl": "*",
        "webmozart/assert": "^1.10",
        "symfony/event-dispatcher": "^6.0",
        "ext-dom": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.5",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "php-cs-fixer": [
            "tools/php-cs-fixer/vendor/bin/php-cs-fixer fix --allow-risky=yes --config=.php-cs-fixer.dist.php"
        ],
        "phpstan": [
            "vendor/bin/phpstan analyse src tests --configuration=tools/phpstan/phpstan.neon.dist"
        ]
    }
}
